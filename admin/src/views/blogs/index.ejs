<div class="my-4 px-4">
  <a
    class="bg-green-300 px-4 py-2 text-2xl font-semibold rounded text-white"
    href="/new"
    >New Blog</a
  >
</div>
<h1 class="text-2xl font-bold py-2">All Blogs</h1>
<ul>
  <% blogs.forEach((blog) => { %>
  <li class="m-2">
    <a href="/<%= blog.id %>"><%= blog.title %></a>
    <%- include ('./partials/_delete_form.ejs', { url : `/${blog.id}` }) %>
  </li>
  <% }); %>
</ul>
